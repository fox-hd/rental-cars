<h3>Frota de carros por Filial</h3>
<% if @cars.empty? %>
<h3>Nenhuma frota de carro cadastrada</h3>
<% end %>

<% @subsidiaries.each do |subsidiary| %>
  <%= subsidiary.name %><br>
    <% @cars.each do |car| %>
      <% if car.subsidiary.name == subsidiary.name %>
        <%= link_to "#{car.car_model.name} | Placa: #{car.license_plate}", car %><br>
      <% end %>
    <% end %> <br>
<% end %>
<%= link_to 'Registrar novo carro', new_car_path %><br>
<%= link_to 'Voltar', root_path %>
